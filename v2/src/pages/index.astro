---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// Busca todos os sentimentos
const feelings = await getCollection('feelings');
---

<Layout title="Feelings Project">
	<main class="min-h-screen bg-white flex flex-col items-center justify-center p-8">
		<h1 class="text-4xl font-bold mb-12">Choose a Feeling</h1>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full max-w-md">
			{feelings.map((feeling) => (
				<a
					href={`/feelings/${feeling.slug}`}
					class="block p-6 rounded-2xl border border-slate-200 hover:border-slate-400 hover:scale-105 transition-all shadow-sm group"
				>
					<h2
						class={`text-2xl font-bold ${feeling.data.color}`}
						transition:name={`title-${feeling.slug}`}
					>
						{feeling.data.title}
					</h2>
					<p class="text-slate-500 text-sm mt-2">{feeling.data.description}</p>
				</a>
			))}
		</div>
	</main>
</Layout>
